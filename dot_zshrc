# Personal
export PERSONAL="~/personal"
alias personal="cd ${PERSONAL}/$1";

export WORK="~/work"
alias work="cd ${WORK}/$1";

function createComponent() {
  dir=$(pwd)
  target_dir="$dir/src/components/$1"

  mkdir "$target_dir" && \
  touch "$target_dir/index.tsx" && \
  echo "export default function $1() {
    return (
      <></>
    )
}" >> "$target_dir/index.tsx"

  echo "Created TSX component: $1"
}

alias ntsx=createComponent;

alias rb='eval "$(rbenv init - zsh)" && rbenv' 

function set_title() {
  wezterm cli set-tab-title "$1"
}

alias st=set_title;

