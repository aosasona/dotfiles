# Keybindings for navigation
keybind = alt+left=unbind
keybind = alt+right=unbind

# New tab
keybind = super+t=text:\x1bN
# New pane
keybind = super+n=text:\x1bn
# Focus on right pane
keybind = super+right=text:\x1bl
# Focus on left pane
keybind = super+left=text:\x1bh
# Focus on top pane
keybind = super+up=text:\x1bk
# Focus on bottom pane
keybind = super+down=text:\x1bj

# Split pane horizontally
keybind = ctrl+shift+-=text:\x1b_
# Split pane vertically
keybind = ctrl+shift+\=text:\x1b|

# Vim bindings
